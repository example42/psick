class <%= metadata.name %>::install::tp (

  String $ensure = '',
  Hash   $confs  = { },
  Hash   $dirs   = { },

) {

  include ::<%= metadata.name %>
  
  tp::install { '<%= metadata.name %>':
    ensure        => pick($ensure,$::<%= metadata.name %>::ensure),
    options_hash  => $::<%= metadata.name %>::options,
    settings_hash => $::<%= metadata.name %>::real_settings,
    data_module   => $::<%= metadata.name %>::data_module,
    conf_hash     => $confs,
    dir_hash      => $dirs,
    auto_conf     => $::<%= metadata.name %>::auto_conf,
    auto_repo     => $::<%= metadata.name %>::auto_depend,
  }

}
